<div class='container random-wrapper'>
        {{#each beers}}
        <div class='random-card'>
            <div class='random-image'>
                <img src='{{this.image_url}}' alt="Beer image">
            </div>
            <div class='beer-text'>
                <h5>{{this.name}}</h5>
                <h6>{{this.tagline}}</h6>
                <p>{{this.description}}</p>
                <p><strong>Food Pairing</strong></p>
                <ul>
                    {{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p> <strong>Brewer Tips:</strong> {{this.brewers_tips}}</p>
            </div>
        </div>
        {{/each}}
</div>